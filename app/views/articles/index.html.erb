<h1> Articles </h1>

<%= link_to 'New Article', new_article_path, class: "btn btn-primary" %>

<ul>
  <% @articles.each do |article| %>
  <li class= "article">
    <div class= "article-title">
    <%= link_to article.title, article_path(article), class: "article-title"%>
    </div>

    <div class="article-content">
    <%= article.content %>
    </div>

    <div class="btn-container">
      <%= link_to 'Edit', edit_article_path(article), class: "btn btn-secondary" %>
      <%= link_to 'Delete',
      article_path(article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
    </div>

  </li>
  <% end %>
</ul>

